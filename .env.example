# .env.example

# ─────────── PostgreSQL ───────────
POSTGRES_USER=strapi_user
POSTGRES_PASSWORD=strapi_pass
POSTGRES_DB=strapi_db

# ─────────── Strapi ───────────
DATABASE_CLIENT=postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=${POSTGRES_DB}
DATABASE_USERNAME=${POSTGRES_USER}
DATABASE_PASSWORD=${POSTGRES_PASSWORD}
DATABASE_SSL=false

# For Strapi v5 you need a set of APP_KEYS etc.
APP_KEYS=your_app_key1,your_app_key2,your_app_key3
API_TOKEN_SALT=some_random_salt
ADMIN_JWT_SECRET=some_admin_jwt_secret
TRANSFER_TOKEN_SALT=some_transfer_salt
JWT_SECRET=some_jwt_secret

# Base URL of Strapi for Next.js to consume
NEXT_PUBLIC_API_URL=http://localhost:1337

# Next.js environment (development or production)
NODE_ENV=development

# (Optional) Network name
NETWORK_NAME=template_net
